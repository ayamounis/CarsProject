@model List<CarsProject.Models.Car>
@{
    ViewData["Title"] = "Dashboard";
}

<h1>Admin Dashboard</h1>
<hr />
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Users</h5>
                <p>@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Total Cars</h5>
                <p>@ViewBag.TotalCars</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Total Orders</h5>
                <p>@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Total Reviews</h5>
                <p>@ViewBag.TotalReviews</p>
            </div>
        </div>
    </div>
</div>

<h2>Manage Cars</h2>
<a asp-action="Add" class="btn btn-primary mb-2">+ Add Car</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Status</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Name</td>
                <td>@car.Price</td>
                <td>@car.Status</td>
                <td>@car.Color</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
